<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="app"
            type="com.meditab.jetbuild.applist.datamodel.AppData" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            tools:context=".buildlist.ui.BuildListFragment">

            <ImageView
                android:id="@+id/ivAppLogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_imsgo"
                android:translationZ="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/appBanner"
                app:layout_constraintEnd_toEndOf="@+id/appBanner"
                app:layout_constraintStart_toStartOf="@+id/appBanner"
                app:layout_constraintTop_toTopOf="@+id/appBanner" />

            <View
                android:id="@+id/appBanner"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="8dp"
                android:background="@color/gray"
                android:elevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appBanner">

                <TextView
                    android:id="@+id/tvAppName"
                    style="@style/tvTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@{app.name}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/appBanner" />

                <TextView
                    android:id="@+id/tvBuildVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@{app.latestBuild.version + ` (` + app.latestBuild.buildNo + `) ~ Beta`}"
                    app:layout_constraintStart_toStartOf="@id/tvAppName"
                    app:layout_constraintTop_toBottomOf="@id/tvAppName" />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@{app.latestBuild.notes}"
                    app:layout_constraintStart_toStartOf="@id/tvAppName"
                    app:layout_constraintTop_toBottomOf="@id/tvAppName" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAction"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Open"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/appBanner" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>