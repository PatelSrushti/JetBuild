<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="tvTitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="tvTitleSecondary">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="toolbarTitle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="buttonCardAction" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
